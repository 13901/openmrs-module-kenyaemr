<!--
	Defines the standard Kenya regimens
-->
<regimens xmlns="http://www.kenyaemr.org/regimens" version="2">
	<category code="ARV" masterSetUuid="1085AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA">
		<drugs>
			<drug code="D4T" conceptUuid="84309AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA" /><!-- Stavudine -->
			<drug code="AZT" conceptUuid="86663AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA" /><!-- Zidovudine -->
			<drug code="TDF" conceptUuid="84795AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA" /><!-- Tenofovir -->
			<drug code="3TC" conceptUuid="78643AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA" /><!-- Lamivudine -->
			<drug code="ABC" conceptUuid="70056AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA" /><!-- Abacavir -->
			<drug code="FTC" conceptUuid="75628AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA" /><!-- Emtricitabine -->
			<drug code="DDI" conceptUuid="74807AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA" /><!-- Didanosine -->
			<drug code="NVP" conceptUuid="80586AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA" /><!-- Nevirapine -->
			<drug code="EFV" conceptUuid="75523AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA" /><!-- Efavirenz -->
			<drug code="LPV" conceptUuid="79040AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA" /><!-- Lopinavir -->
			<drug code="RTV" conceptUuid="83412AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA" /><!-- Ritonavir -->
			<drug code="ATV" conceptUuid="71647AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA" /><!-- Atazanavir -->
		</drugs>

		<!-- Adult first line -->
		<group code="adult-first" name="Adult (first line)">
			<regimen name="TDF + 3TC + NVP (300mg OD/150mg BD/200mg BD)">
				<component drugCode="TDF" dose="300" units="mg" frequency="OD" />
				<component drugCode="3TC" dose="150" units="mg" frequency="BD" />
				<component drugCode="NVP" dose="200" units="mg" frequency="BD" />
			</regimen>
			<regimen name="TDF + 3TC(BD) + EFV (300mg OD/150mg BD/600mg OD)">
				<component drugCode="TDF" dose="300" units="mg" frequency="OD" />
				<component drugCode="3TC" dose="150" units="mg" frequency="BD" />
				<component drugCode="EFV" dose="600" units="mg" frequency="OD" />
			</regimen>
			<regimen name="TDF + 3TC(OD) + EFV (300mg OD/300mg OD/600mg OD)">
				<component drugCode="TDF" dose="300" units="mg" frequency="OD" />
				<component drugCode="3TC" dose="300" units="mg" frequency="OD" />
				<component drugCode="EFV" dose="600" units="mg" frequency="OD" />
			</regimen>
			<regimen name="AZT + 3TC + NVP(BD) (300mg BD/150mg BD/200mg BD)">
				<component drugCode="AZT" dose="300" units="mg" frequency="BD" />
				<component drugCode="3TC" dose="150" units="mg" frequency="BD" />
				<component drugCode="NVP" dose="200" units="mg" frequency="BD" />
			</regimen>
			<regimen name="AZT + 3TC + NVP(OD) (300mg BD/150mg BD/200mg OD)">
				<component drugCode="AZT" dose="300" units="mg" frequency="BD" />
				<component drugCode="3TC" dose="150" units="mg" frequency="BD" />
				<component drugCode="NVP" dose="200" units="mg" frequency="OD" />
			</regimen>
			<regimen name="AZT + 3TC + EFV (300mg BD/150mg BD/600mg NOCTE)">
				<component drugCode="AZT" dose="300" units="mg" frequency="BD" />
				<component drugCode="3TC" dose="150" units="mg" frequency="BD" />
				<component drugCode="EFV" dose="600" units="mg" frequency="NOCTE" />
			</regimen>
			<regimen name="D4T + 3TC + NVP(BD) (30mg BD/150mg BD/200mg BD)">
				<component drugCode="D4T" dose="30" units="mg" frequency="BD" />
				<component drugCode="3TC" dose="150" units="mg" frequency="BD" />
				<component drugCode="NVP" dose="200" units="mg" frequency="BD" />
			</regimen>
			<regimen name="D4T + 3TC + NVP(OD) (30mg BD/150mg BD/200mg OD)">
				<component drugCode="D4T" dose="30" units="mg" frequency="BD" />
				<component drugCode="3TC" dose="150" units="mg" frequency="BD" />
				<component drugCode="NVP" dose="200" units="mg" frequency="OD" />
			</regimen>
			<regimen name="D4T + 3TC + EFV (30mg BD/150mg BD/600mg NOCTE)">
				<component drugCode="D4T" dose="30" units="mg" frequency="BD" />
				<component drugCode="3TC" dose="150" units="mg" frequency="BD" />
				<component drugCode="EFV" dose="600" units="mg" frequency="NOCTE" />
			</regimen>
		</group>

		<!-- Adult second line -->
		<group code="adult-second" name="Adult (second line)">
			<regimen name="AZT + 3TC + LPV/r (300mg BD/150mg BD/400mg BD/100mg BD)">
				<component drugCode="AZT" dose="300" units="mg" frequency="BD" />
				<component drugCode="3TC" dose="150" units="mg" frequency="BD" />
				<component drugCode="LPV" dose="400" units="mg" frequency="BD" />
				<component drugCode="RTV" dose="100" units="mg" frequency="BD" />
			</regimen>
			<regimen name="AZT + 3TC + ATV/r (300mg BD/150mg BD/300mg OD/100mg OD)">
				<component drugCode="AZT" dose="300" units="mg" frequency="BD" />
				<component drugCode="3TC" dose="150" units="mg" frequency="BD" />
				<component drugCode="ATV" dose="300" units="mg" frequency="OD" />
				<component drugCode="RTV" dose="100" units="mg" frequency="OD" />
			</regimen>
			<regimen name="TDF + 3TC + LPV/r (300mg OD/150mg BD/400mg BD/100mg BD)">
				<component drugCode="TDF" dose="300" units="mg" frequency="OD" />
				<component drugCode="3TC" dose="150" units="mg" frequency="BD" />
				<component drugCode="LPV" dose="400" units="mg" frequency="BD" />
				<component drugCode="RTV" dose="100" units="mg" frequency="BD" />
			</regimen>
			<regimen name="TDF + 3TC(BD) + ATV/r (300mg OD/150mg BD/300mg OD/100mg OD)">
