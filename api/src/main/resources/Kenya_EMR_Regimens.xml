		<regimens>
			<!-- Adult fixed dose combinations -->
			<regimen name="AZT + 3TC (300mg/150mg)" suitability="adult">
				<component drugCode="AZT" dose="300" units="mg" />
				<component drugCode="3TC" dose="150" units="mg" />
			</regimen>
			<regimen name="AZT + 3TC + NVP (300mg/150mg/200mg)" suitability="adult">
				<component drugCode="AZT" dose="300" units="mg" />
				<component drugCode="3TC" dose="150" units="mg" />
				<component drugCode="NVP" dose="200" units="mg" />
			</regimen>
			<regimen name="D4T + 3TC (30mg/150mg)" suitability="adult">
				<component drugCode="D4T" dose="30" units="mg" />
				<component drugCode="3TC" dose="150" units="mg" />
			</regimen>
			<regimen name="D4T + 3TC + NVP (30mg/150mg/200mg)" suitability="adult">
				<component drugCode="D4T" dose="30" units="mg" />
				<component drugCode="3TC" dose="150" units="mg" />
				<component drugCode="NVP" dose="200" units="mg" />
			</regimen>
			<regimen name="TDF + 3TC (300mg/300mg)" suitability="adult">
				<component drugCode="TDF" dose="300" units="mg" />
				<component drugCode="3TC" dose="300" units="mg" />
			</regimen>
			<regimen name="TDF + 3TC + EFV (300mg/300mg/600mg)" suitability="adult">
				<component drugCode="TDF" dose="300" units="mg" />
				<component drugCode="3TC" dose="300" units="mg" />
				<component drugCode="EFV" dose="600" units="mg" />
			</regimen>

			<!-- Children fixed dose combinations -->
			<regimen name="ABC + 3TC (60mg/30mg)" suitability="child">
				<component drugCode="ABC" dose="60" units="mg" />
				<component drugCode="3TC" dose="30" units="mg" />
			</regimen>
			<regimen name="AZT + 3TC (60mg/30mg)" suitability="child">
				<component drugCode="AZT" dose="60" units="mg" />
				<component drugCode="3TC" dose="30" units="mg" />
			</regimen>
			<regimen name="AZT + 3TC + NVP (60mg/30mg/50mg)" suitability="child">
				<component drugCode="AZT" dose="60" units="mg" />
				<component drugCode="3TC" dose="30" units="mg" />
				<component drugCode="NVP" dose="50" units="mg" />
			</regimen>
		</regimens>
